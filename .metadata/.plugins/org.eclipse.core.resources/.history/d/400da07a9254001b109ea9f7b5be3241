<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="AuthorityMapper">
	<select id="selectGroupTableList" resultType="authorityDto" >
		 SELECT GROUPID, GROUPNAME, USE_YN AS USEYN
		   FROM GROUPTABLE
		  WHERE USE_YN = 'Y'
	</select>
	
	<select id="selectObjectTableList" resultType="authorityDto">
		SELECT OBJID, OBJNAME, DEPT 
		  FROM OBJECTTABLE
	</select>
	
	<select id="selectMappingTableListByGroupId" resultType="authorityDto">
		SELECT OBJID, OBJNAME, DEPT 
		  FROM MAPPINGTABLE
		 WHERE GROUPID = #{ groupid }
	</select>
</mapper>