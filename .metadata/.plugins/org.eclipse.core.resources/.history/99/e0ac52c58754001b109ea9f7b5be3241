package ino.web.authorityTable.service;

import java.util.List;
import java.util.Map;

import org.mybatis.spring.SqlSessionTemplate;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import ino.web.authorityTable.dto.AuthorityDto;

@Service
public class AuthorityService {

	@Autowired
	private SqlSessionTemplate sqlSessionTemplate;
	
	public List<AuthorityDto> getGroupList(){
		return sqlSessionTemplate.selectList("selectGroupTableList");
	}

	public List<AuthorityDto> getMappingListByGroupId(Map<String, object> map) {
		return sqlSessionTemplate.selectList("selectMappingListByGroupId", map);
		
	}
}
